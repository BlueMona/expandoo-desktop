{
    "root": true,
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "extends": [
        "peerio"
    ],
    "settings":{
        "import/core-modules": [ "electron" ]
    },
    "rules":{
        "global-require": 0,
        "import/no-dynamic-require": 0,
        "react/jsx-indent": [2, 2],
        "react/prop-types": 0,
        "react/sort-comp": 0,
        "no-alert":0
    },
    "globals":{
        "document": false,
        "alert": false,
        "confirm": false
    }
}
