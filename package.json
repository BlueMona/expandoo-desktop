{
    "name": "peerio-desktop",
    "productName": "Icebear",
    "version": "1.0.0",
    "description": "Peerio desktop client (codename Icebear)",
    "main": "build/main.js",
    "scripts": {
        "start": "npm-run-all compile --parallel babel:watch sass:watch electron",
        "compile": "npm-run-all cleanup copy-static babel sass",
        "cleanup": "rm -rf build && mkdir -p build",
        "copy-static": "cp -f src/index.html build/index.html && cp -R static/* build",
        "babel": "babel src --out-dir build",
        "babel:watch": "npm run babel -- -w",
        "sass": "node-sass src/sass/main.scss build/style.css",
        "sass:watch": "npm run sass -- -w",
        "electron": "sleep 3 && electron .",
        "dist": "NODE_ENV=production npm-run-all compile dist:mac",
        "dist:mac": "build --mac --x64",
        "dist:win": "build --win --x64",
        "dist:linux": "build -l",
        "validate": "npm-run-all lint flow",
        "lint": "eslint . --fix --ext .js,.jsx",
        "flow": "flow check",
        "flow:coverage": "for n in src/**/*.js?; do echo \"$n\"; flow coverage \"$n\"; done",
        "flow:suggest": "flow suggest src/**/*.js? | ./node_modules/diff2html-cli/bin/diff2html -i stdin",
        "install-win-build-tools": "./scripts/install-build-tools.sh",
        "get-locales": "./scripts/get-locales.sh",
        "storybook": "start-storybook -p 6006 -c .storybook",
        "build-storybook": "build-storybook"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/PeerioTechnologies/peerio-desktop.git"
    },
    "author": "Anri Asaturov <anri82@gmail.com>",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/PeerioTechnologies/peerio-desktop/issues"
    },
    "homepage": "https://github.com/PeerioTechnologies/peerio-desktop#readme",
    "devDependencies": {
        "@kadira/storybook": "^2.21.0",
        "babel-cli": "6.16.0",
        "babel-plugin-syntax-flow": "6.13.0",
        "babel-plugin-syntax-jsx": "6.13.0",
        "babel-plugin-transform-es2015-modules-commonjs": "6.16.0",
        "babel-plugin-transform-flow-strip-types": "6.14.0",
        "babel-plugin-transform-inline-environment-variables": "6.8.0",
        "babel-plugin-transform-react-constant-elements": "6.9.1",
        "babel-plugin-transform-react-display-name": "6.8.0",
        "babel-plugin-transform-react-inline-elements": "6.8.0",
        "babel-plugin-transform-react-jsx": "6.8.0",
        "babel-plugin-transform-react-jsx-self": "6.11.0",
        "babel-plugin-transform-react-jsx-source": "6.9.0",
        "babel-plugin-transform-remove-debugger": "6.8.0",
        "cz-conventional-changelog": "1.2.0",
        "devtron": "1.4.0",
        "diff2html-cli": "2.0.2",
        "electron-builder": "7.13.0",
        "electron-devtools-installer": "2.0.1",
        "electron-prebuilt": "1.4.3",
        "electron-reload": "1.0.2",
        "eslint-config-peerio": "*",
        "flow-bin": "0.33.0",
        "ghooks": "1.3.2",
        "iflow-bluebird": "1.1.26",
        "node-sass": "3.10.1",
        "npm-run-all": "3.1.0",
        "standard-version": "^3.0.0",
        "validate-commit-msg": "2.8.2"
    },
    "dependencies": {
        "electron-json-storage": "2.0.1",
        "immutability-helper": "2.0.0",
        "material-design-icons": "3.0.1",
        "mobx": "2.6.0",
        "normalize.css": "5.0.0",
        "peerio-copy": "git+https://github.com/PeerioTechnologies/peerio-copy.git#dev",
        "peerio-translator": "git+https://github.com/PeerioTechnologies/peerio-translator.git#icebear",
        "react": "15.3.2",
        "react-addons-css-transition-group": "15.3.2",
        "react-dom": "15.3.2",
        "react-router": "2.8.1",
        "react-toolbox": "1.2.2"
    },
    "config": {
        "ghooks": {
            "pre-push": "npm run validate",
            "post-checkout": "npm update",
            "post-merge": "npm update",
            "commit-msg": "validate-commit-msg"
        },
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        },
        "validate-commit-msg": {
            "types": [
                "feat",
                "fix",
                "docs",
                "style",
                "refactor",
                "perf",
                "test",
                "chore",
                "revert"
            ],
            "warnOnFail": false,
            "maxSubjectLength": 120,
            "subjectPattern": ".+",
            "helpMessage": "Convention: https://goo.gl/3TgTsh"
        }
    },
    "directories": {
        "buildResources": "dist-assets"
    },
    "build": {
        "appId": "com.peerio.desktop",
        "files": [
            "build/**",
            "package.json",
            "node_modules/**"
        ],
        "asar": false,
        "compression": "normal",
        "win": {
            "target": [
                "squirrel"
            ],
            "title": "Peerio",
            "version": "1.0.0",
            "msi": true
        },
        "mac": {
            "category": "public.app-category.productivity"
        },
        "linux": {
            "target": [
                "AppImage"
            ]
        }
    }
}
