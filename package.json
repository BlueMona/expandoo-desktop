{
  "name": "expandoo-desktop",
  "description": "Expandoo icebear desktop",
  "version": "1.4.3",
  "scripts": {
    "pull": "./scripts/pull_latest_peerio.js",
    "customize:files": "rsync -r overrides/ ../.expandoo-desktop-build",
    "customize:strings": "./scripts/customize_strings.js",
    "app:dist": "cd ../.expandoo-desktop-build && npm run dist",
    "app:start": "cd ../.expandoo-desktop-build && npm start",
    "shortcut": "./scripts/link.js",
    "start": "npm-run-all -l -n customize:files customize:strings app:start",
    "dist": "npm-run-all -l -n customize:files customize:strings app:dist shortcut",
    "postmerge": "npm update",
    "commitmsg": "validate-commit-msg",
    "bump": "./scripts/bump.js",
    "bump:prerelease": "./scripts/bump.js --prerelease",
    "release": "npm-run-all -l -n pull bump dist",
    "prerelease": "npm-run-all -l -n pull bump:prerelease dist",
    "publish": "git push --follow-tags origin master"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PeerioTechnologies/expandoo-desktop.git"
  },
  "author": "Technologies Peerio Inc. <support@peerio.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/PeerioTechnologies/expandoo-desktop/issues"
  },
  "homepage": "https://github.com/PeerioTechnologies/expandoo-desktop#readme",
  "devDependencies": {
    "eslint-config-peerio": "*",
    "husky": "0.12.0",
    "npm-run-all": "latest",
    "cz-conventional-changelog": "1.2.0",
    "validate-commit-msg": "2.8.2",
    "lodash": "4.17.2",
    "semver": "^5.1.0",
    "yargs": "^6.6.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert",
        "core"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 120,
      "subjectPattern": ".+",
      "helpMessage": "Convention: https://goo.gl/3TgTsh"
    }
  },
  "build": {
    "appId": "com.expandoo.desktop",
    "productName": "Expandoo",
    "files": [
      "**",
      "!node_modules/material-design-icons${/*}",
      "node_modules/material-design-icons/iconfont/*",
      "!node_modules/peerio-icebear${/*}",
      "!node_modules/react-toolbox${/*}",
      "!node_modules/buffer/bin${/*}",
      "node_modules/react-toolbox/lib/**/{*.js,*.json,*.css}",
      "node_modules/react-toolbox/package.json",
      "!node_modules/**/{example,examples,demo,demos,test,tests,__test?__,.vscode}${/*}",
      "!node_modules/**/{*.md,*.markdown,*.ts,*.flow,*.html,*.htm,*.map,*.test.js,*.watchr,*.coffee}",
      "!node_modules/**/{LICENSE,license,LICENSE.*,LICENSE-MIT,LICENSE-MIT.*,LICENCE,PATENTS,COPYING.txt}",
      "!node_modules/**/{bower.json,?runtfile.js,?ulpfile.js,?akefile}",
      "!node_modules/**/{.npmignore,.eslintrc,.eslintrc.js,.jshintrc,.babelrc,karma.conf.js,.jsfmtrc}",
      "!node_modules/**/{example.js,Gruntfile.ls,build.ls,.coveralls.yml,.zuul.yml,component.json}"
    ],
    "asar": true,
    "compression": "normal",
    "win": {
      "target": [
        "squirrel"
      ],
      "title": "Expandoo",
      "version": "1.4.3",
      "msi": true
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "dmg": {
      "window": {
        "x": 200,
        "y": 160,
        "width": 400,
        "height": 260
      },
      "contents": [
        {
          "x": 160,
          "y": 170
        },
        {
          "x": 300,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "directories": {
    "buildResources": "dist-assets"
  },
  "dependencies": {}
}
