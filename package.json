{
  "name": "peerio-desktop",
  "version": "1.0.0",
  "description": "Peerio desktop client (codename Icebear)",
  "main": "src/main.js",
  "scripts": {
    "start": "NODE_ENV=development electron .",
    "pack": "build --dir",
    "dist": "build",
    "dist-win": "build --win --x64",
    "dist-lin": "build -l"
  },
  "repository": {
    "type": "git",
    "url": "git+https://anri-asaturov@github.com/PeerioTechnologies/peerio-desktop.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/PeerioTechnologies/peerio-desktop/issues"
  },
  "homepage": "https://github.com/PeerioTechnologies/peerio-desktop#readme",
  "devDependencies": {
    "devtron": "1.3.0",
    "electron-builder": "5.26.0",
    "electron-devtools-installer": "2.0.1",
    "electron-prebuilt": "1.3.3",
    "eslint-config-peerio": "*"
  },
  "dependencies": {
    "electron-json-storage": "2.0.0"
  },
  "build": {
    "appId": "com.peerio.peeriomac",
    "category": "public.app-category.productivity",
    "win": {
      "target": ["squirrel"],
      "title": "Peerio",
      "version": "1.0.0",
      "msi": true
    },
    "dmg": {
      "contents": [
        { "x": 290, "y": 180, "type": "link", "path": "/Applications" },
        { "x": 110, "y": 180, "type": "file", "path": "computed by electron-builder, ignored here" }
      ]
    }
  }
}
