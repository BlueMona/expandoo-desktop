{
    "name": "peerio-desktop",
    "productName": "Icebear",
    "version": "1.0.0",
    "description": "Peerio desktop client (codename Icebear)",
    "main": "build/main.js",
    "scripts": {
        "start": "npm-run-all compile --parallel babel:watch electron",
        "compile": "npm-run-all cleanup copy-static babel",
        "cleanup": "rm -rf build && mkdir -p build",
        "copy-static": "cp -f src/index.html build/index.html",
        "babel": "babel src --out-dir build",
        "babel:watch": "npm run babel -- -w",
        "electron": "electron .",
        "dist": "NODE_ENV=production npm-run-all compile dist:mac dist:win dist:linux",
        "dist:mac": "build --mac --x64",
        "dist:win": "build --win --x64",
        "dist:linux": "build -l",
        "validate": "npm-run-all lint flow",
        "lint": "eslint . --fix --ext .js,.jsx",
        "flow": "flow check",
        "flow:coverage": "for n in src/**/*.js?; do echo \"$n\"; flow coverage \"$n\"; done",
        "flow:suggest": "flow suggest src/**/*.js? | ./node_modules/diff2html-cli/bin/diff2html -i stdin",
        "install-win-build-tools": "./scripts/install-build-tools.sh"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/PeerioTechnologies/peerio-desktop.git"
    },
    "author": "Anri Asaturov <anri82@gmail.com>",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/PeerioTechnologies/peerio-desktop/issues"
    },
    "homepage": "https://github.com/PeerioTechnologies/peerio-desktop#readme",
    "devDependencies": {
        "babel-cli": "6.16.0",
        "babel-plugin-syntax-flow": "6.13.0",
        "babel-plugin-syntax-jsx": "6.13.0",
        "babel-plugin-transform-flow-strip-types": "6.14.0",
        "babel-plugin-transform-inline-environment-variables": "6.8.0",
        "babel-plugin-transform-react-constant-elements": "6.9.1",
        "babel-plugin-transform-react-display-name": "6.8.0",
        "babel-plugin-transform-react-inline-elements": "6.8.0",
        "babel-plugin-transform-react-jsx": "6.8.0",
        "babel-plugin-transform-react-jsx-self": "6.11.0",
        "babel-plugin-transform-react-jsx-source": "6.9.0",
        "babel-plugin-transform-remove-debugger": "6.8.0",
        "devtron": "1.4.0",
        "electron-builder": "7.11.4",
        "electron-devtools-installer": "2.0.1",
        "electron-prebuilt": "1.4.3",
        "electron-reload": "1.0.2",
        "eslint-config-peerio": "*",
        "flow-bin": "0.33.0",
        "iflow-bluebird": "1.1.26",
        "npm-run-all": "3.1.0",
        "cz-conventional-changelog": "1.2.0",
        "diff2html-cli": "2.0.2",
        "ghooks": "1.3.2",
        "standard-version": "^3.0.0",
        "validate-commit-msg": "2.8.2"
    },
    "dependencies": {
        "electron-json-storage": "2.0.1",
        "react": "15.3.2",
        "react-dom": "15.3.2",
        "react-router": "2.8.1"
    },
    "config": {
        "ghooks": {
            "pre-push": "npm run validate",
            "post-checkout": "npm update",
            "post-merge": "npm update",
            "commit-msg": "validate-commit-msg"
        },
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        },
        "validate-commit-msg": {
            "types": [
                "feat",
                "fix",
                "docs",
                "style",
                "refactor",
                "perf",
                "test",
                "chore",
                "revert"
            ],
            "warnOnFail": false,
            "maxSubjectLength": 120,
            "subjectPattern": ".+",
            "helpMessage": "Convention: https://goo.gl/3TgTsh"
        }
    },
    "directories": {
        "buildResources": "build-assets"
    },
    "build": {
        "appId": "com.peerio.desktop",
        "category": "public.app-category.productivity",
        "files": ["build/**", "package.json", "node_modules/**"],
        "asar": false,
        "compression": "normal",
        "win": {
            "target": [
                "squirrel"
            ],
            "title": "Peerio",
            "version": "1.0.0",
            "msi": true
        },
        "mac": {
            "target": ["dmg"]
        },
        "dmg": {
            "contents": [{
                "x": 290,
                "y": 180,
                "type": "link",
                "path": "/Applications"
            }, {
                "x": 110,
                "y": 180
            }]
        },
        "linux": {
            "target": ["AppImage"]
        }
    }
}